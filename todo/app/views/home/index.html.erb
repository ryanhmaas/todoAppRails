<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Done</th>
      <th>Edit</th>
      <th>Mark as Done</th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo_item| %>
      <tr>
        <td><%= todo_item.name %></td>
        <td><%= todo_item.description %></td>
        <td><%= todo_item.done %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item) %></td>
        <td><%= link_to 'Done', mark_as_done_path(todo_item)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Todo Item', new_todo_item_path, :class => "btn btn-primary" %>
